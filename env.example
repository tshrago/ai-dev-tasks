# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_interaction_logs
DB_USER=ai_logger
DB_PASSWORD=secure_password_123
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/json
UPLOAD_DIR=./uploads

# AI Model Integration
AI_MODEL_API_URL=https://api.openai.com/v1
AI_MODEL_API_KEY=your-ai-model-api-key-here
AI_MODEL_TIMEOUT=30000

# Safety Monitoring
SAFETY_CHECK_ENABLED=true
SAFETY_THRESHOLD=0.8
ALERT_WEBHOOK_URL=

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000

# Data Retention
DATA_RETENTION_DAYS=2555
ARCHIVAL_ENABLED=true
ARCHIVAL_INTERVAL_HOURS=24

